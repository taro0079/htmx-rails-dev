<h1>記事一覧</h1>

<div class="row">
    <% @articles.each do |article| %>
        <div class="mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= article.title %></h5>
                    <%= link_to '続きを読む', article_path(article), class: 'btn btn-primary' %>
                </div>
            </div>
        </div>
    <% end %>
</div>
